style "oxygen-default"
{

    GtkButton::child_displacement_x = 0
    GtkButton::child_displacement_y = 0

    GtkCalendar::inner-border = 0
    GtkCalendar::horizontal-separation = 0
    GtkCheckButton::indicator-size = 18
    GtkComboBoxEntry::appears-as-list = 1
    GtkEntry::honors-transparent-bg-hint = 1
    GtkMenu::horizontal-padding = 3
    GtkMenu::vertical-padding = 3
    GtkMenu::horizontal-offset = -7
    GtkScale::slider-width = 23
    GtkScale::slider-length = 15
    GtkScrollbar::trough-under-steppers=0
    GtkScrollbar::trough-border=1
    GtkScrolledWindow::scrollbar-spacing=1
    GtkStatusbar::has-resize-grip = FALSE
    GtkTreeView::allow-rules = 1
    GtkTreeView::row-ending-details = 1
    GtkTreeView::enable-tree-lines = TRUE

    # shadow types
    GtkMenuBar::shadow-type = GTK_SHADOW_NONE
    GtkStatusbar::shadow-type = GTK_SHADOW_NONE
    GtkToolbar::shadow-type = GTK_SHADOW_NONE

    # make spinbuttons' background white
    base[NORMAL] = "#ffffff"

    engine "oxygen-gtk"
    {
    }
}

class "*" style "oxygen-default"

# path buttons
style "oxygen-pathbutton" = "oxygen-default"
{
    #add some spacing to have centered text
    GtkButton::inner-border = { 4, 4, 1, 0 }
}
widget_class "*PathBar.*Button" style "oxygen-pathbutton"

# menuitems padding
style "oxygen-menuitem" = "oxygen-default"
{
    xthickness = 1
    ythickness = 5
}

widget_class "*.GtkMenu.*MenuItem" style "oxygen-menuitem"

# menuitems padding, for separators
style "oxygen-separator-menuitem" = "oxygen-default"
{
    xthickness = 1
    ythickness = 1
}

widget_class "*.GtkMenu.*SeparatorMenuItem" style "oxygen-separator-menuitem"

# notebook settings
style "oxygen-notebook" = "oxygen-default"
{
    xthickness = 4
    ythickness = 4
}

class "GtkNotebook" style "oxygen-notebook"

# entry margins
style "oxygen-entry" = "oxygen-default"
{
  xthickness = 2
  ythickness = 2
}
class "*GtkEntry" style "oxygen-entry"
class "*GtkSpinButton" style "oxygen-entry"
widget_class "*.Toolbar*GtkEntry" style "oxygen-entry"
widget_class "*.SwtFixed.GtkCombo.GtkEntry" style "oxygen-entry"

# editable combobox margins
style "oxygen-combobox-entry" = "oxygen-default"
{
    xthickness = 1
    ythickness = 1
}
class "GtkComboBoxEntry" style "oxygen-combobox-entry"
widget_class "*.GtkComboBoxEntry.*Button" style "oxygen-combobox-entry"

# vertical separators need enough room
style "oxygen-vseparator" = "oxygen-default"
{
    xthickness = 3
}

class "GtkVSeparator" style "oxygen-vseparator"

#############
# Workarounds

# gimp
style "oxygen-gimp-scale"
{
    # this ensures that toolpanels fonts in gimp is identical
    # to default font (which otherwise is ugly
    GimpDock::font-scale = 1.01
}

class "*" style "oxygen-gimp-scale"

# 2pixels thickness.
style "oxygen-w2" = "oxygen-default"
{
    xthickness = 2
    ythickness = 2
}

class "*GtkScrolledWindow" style "oxygen-w2"
class "*GtkViewport" style "oxygen-w2"
class "*GtkFrame" style "oxygen-w2"

# tree headers
style "oxygen-header" = "oxygen-default"
{
    xthickness = 2
    ythickness = 0
}
widget_class "*Tree*GtkButton" style "oxygen-header"
widget_class "*List*GtkButton" style "oxygen-header"
widget_class "*GimpThumbBox*GtkEventBox*GtkVBox*GtkButton" style "oxygen-header"

